<div class="container-fluid">
  <div class="row-fluid" id="bottom-scrollable">
    <div class="span9">
      <b> {{hello}} </b>
      <dl class="terms-list">
        {{#each term in controller itemViewClass="YJ.TermItemView"}}
          <dt><dfn>{{#linkTo "term" term}}{{term.name}}{{/linkTo}}</dfn></dt>
          {{#if view.hasFocus}}
            <dd> {{term.description}}
          {{else}}
            <dd> {{view.shortDescription}}</dd>
          {{/if}}
        {{/each}}
      </dl>
    </div>
    <div class="span3">
      {{template "alphabet" }}
    </div>
  </div>
</div>
