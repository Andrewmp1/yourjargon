<ul class="alphabet-list">
  <a {{action allTerms target="controller"}}> Show All </a>
  <!-- 'action all' above is scary; tie it down better -->
  {{#each letter in controller.alphabet}}
    <li><span class="badge"><a {{action filterTerms letter target="controller"}}> {{letter}} </a></span></li>
  {{/each}}
</ul>
